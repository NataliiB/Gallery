<% if user_signed_in? %>

<h1><%= @category.title %></h1>
<p><%= @category.description %></p>
<h2>Articles</h2>
<ul>
<% @category.articles.each do |article| %>
    <li>
      <%=link_to article.title, article_path  %>

    </li>
<% end %>
</ul>
<% else %>
    <%= button_to "Sign in", new_user_session_path %>
<% end %>
